<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash2"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/logoSpash"
        android:layout_width="wrap_content"
        android:layout_height="344dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/logo3_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSplash"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:text="RESTAURANT FLUTTER"
        android:textColor="@color/colorGreen"
        android:fontFamily="@font/sfprorounded"
        android:gravity="center"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoSpash"/>

    <TextView
        android:id="@+id/textSplash2"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="I'M SORY FOR WHAT I SAID WHEN I WAS HUNGRY."
        android:textColor="@color/colorGreen"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/sfprorounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSplash"
        app:layout_constraintVertical_bias="0.104" />
</androidx.constraintlayout.widget.ConstraintLayout>